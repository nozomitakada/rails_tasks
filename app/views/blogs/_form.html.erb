<%= form_with(model: @blog, local: true ,url: choose_new_or_edit ) do |form| %>
  <!-- エラー文表示 -->
  <% if @blog.errors.any? %>
    <div id="error_explanation">
      <h2>文字数確認してください</h2>
      <ul>
      <% @blog.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="blog_title">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>
  <div class="blog_title">
    <%= form.label :content %>
    <%= form.text_field :content %>
  </div>
  <%= form.submit %>

<% end %>
